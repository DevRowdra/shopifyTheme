<style>
  #myliq{
   background:{{ section.settings.background }};
    margin: 10px;
    padding: {{ section.settings.padding_size }}px;
   text-align:{{ section.settings.text_aligment }};
    font-size: {{section.settings.font_size}}px;
    color:{{ section.settings.font_color }}
 

  }
</style>
{% if section.settings.show_announcement %}
<div id='myliq'>
  {{ section.settings.a_text }}
</div>
  {% endif %}
  <div>
    {{ section.settings.custom_html }}
  </div>
  <div>
    <img src="{{ section.settings.image_with_text_image | image_url:'100x' }}" alt="" />
   
  </div>
{% schema  %} 
 {
    "name":"Announcements",
    "settings":[
      {
  "type": "checkbox",
  "id": "show_announcement",
  "label": "Show announcement",
  "default": true
},
       {
  "type": "text",
  "id": "a_text",
  "label": "Heading",
  "default": "Please enter a hading"
},{
  "type": "range",
  "id": "font_size",
  "min": 12,
  "max": 24,
  "step": 1,
  "unit": "px",
  "label": "Font size",
  "default": 16
},{
  "type": "range",
  "id": "padding_size",
  "min": 5,
  "max": 15,
  "step": 1,
  "unit": "px",
  "label": "Padding size",
  "default": 10
}
,{
  "type": "color",
  "id": "font_color",
  "label": "Announcement text",
  "default": "#000000"
}
,{
  "type": "color_background",
  "id": "background",
  "label": "Background",
  "default": "linear-gradient(#ffffff, #000000)"
},{
  "type": "radio",
  "id": "text_aligment",
  "label": "text alignment",
  "options": [
    {
      "value": "left",
      "label": "Left"
    },
    {
      "value": "center",
      "label": "Centered"
    }
,    {
      "value": "right",
      "label": "Right"
    }
  ],
  "default": "left"
},{
  "type": "html",
  "id": "custom_html",
  "label": "Writte here your html code"
},{
  "type": "image_picker",
  "id": "image_with_text_image",
  "label": "Image"
}





    ]
   
  }
{% endschema %}